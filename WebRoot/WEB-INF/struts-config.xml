<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
<form-beans>
		<form-bean name="loginForm" type="com.learning.drp.web.forms.LoginActionForm"/>
	</form-beans>
	
	<global-exceptions>
		<exception key="errors.detail" type="com.learning.drp.AppException" path="/html/404.html"/>
	</global-exceptions>
	
	<global-forwards>
		<forward name="login" path="/html/login.html" redirect="true"/>
	</global-forwards>
	
	<action-mappings>
		
		<action path="/user"
				type="org.springframework.web.struts.DelegatingActionProxy"
				name="loginForm"
				scope="request"
				parameter="method"
		/>
	
		<action path="/resourceDoc"
				type="org.springframework.web.struts.DelegatingActionProxy"
				name="resourceDoc"
				scope="request"
				parameter="method"
		/>
		
		<action path="/score"
				type="org.springframework.web.struts.DelegatingActionProxy"
				name="score"
				scope="request"
				parameter="method"
		/>
		
		<action path="/studylink"
				type="org.springframework.web.struts.DelegatingActionProxy"
				name="studylink"
				scope="request"
				parameter="method"
		/>
		
		<action path="/testdoc"
				type="org.springframework.web.struts.DelegatingActionProxy"
				name="testdoc"
				scope="request"
				parameter="method"
		/>
	</action-mappings>
	
    <message-resources parameter="MessageResources" />

</struts-config>